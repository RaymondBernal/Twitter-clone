<div class="panel panel-default post-form-panel">
    <div class="panel-body">
       <div class="col-sm-1">
          <img src="/icon1.png" class="rounded-img" height="30px" width="30px"></img>
        </div>
        <div class="col-sm-11">
          <%= form_for(@newPost) do |f| %>
          <center>
          <div class="field" style="margin-left: 10px;">
            <%= f.text_field :content, autofocus: true, class: "form-control" %>
            <span type="button" class="btn btn-submit" style="float: right; margin-top: 4px;"><%= f.submit "Add Post", class: "btn btn-primary" %></span>
          </div>
          </center>
          <% end %>
        </div>

    </div>
</div>

